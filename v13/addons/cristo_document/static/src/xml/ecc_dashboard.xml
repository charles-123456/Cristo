<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-extend="DioceseParishDetails">
        <t t-jquery=".sm_box_cont" t-operation="append">
        	<t t-if="widget.login_member['files']">
                <div class="col-md-4 col-sm-6 col-xs-12">
                   <div class="info-box l-bg-cherry">
                      <span class="info-box-icon"><i class="fa fa-folder-open"></i></span>
                      <div class="info-box-content">
                          <span class="text open_document cr_navigate" style="position:absolute;right:18px;top:-3px;color:white;font-size:18px;"><i class="fa fa-info-circle"></i></span>
                          <span class="info-box-text" style="font-size:18px;">Documents</span>
                          <span class="info-box-number" style="font-size:24px;"><t t-esc="widget.login_member['files_count']" /></span>
                          <div class="progress">
                             <div class="progress-bar" style="width: 0%"></div>
                          </div>
                      </div>
                  </div>
                </div>
            </t>
        </t>
    </t>
</templates>