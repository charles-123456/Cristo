<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-extend="LoginMemberDetails">
        <t t-jquery=".sm_box_cont" t-operation="prepend">
        	<t t-if="widget.login_member['calendar']">
        		<div class="col-md-4 col-sm-6 col-xs-12">
		          <div class="info-box box_curve_st" style="box-shadow: 0 3px 8px grey">
		            <span class="info-box-icon bg-light-blue box_curve_st"><i class="fa fa-calendar"></i></span>
		
		            <div class="info-box-content">
		              <span class="info-box-number box_title">Calendar <br/><span style="font-size:25px;" t-esc="widget.login_member['total_cal']" /></span>
		              <span class="text cr_calendar cr_navigate" style="position:absolute;bottom:15px;right:20px;font-size:14px;">View &#160;<i class="fa fa-external-link-square"></i></span><br/>
		            </div>
		          </div>
		        </div>
		    </t>
		    <t t-if="widget.login_member['meeting']">
		        <div class="col-md-4 col-sm-6 col-xs-12">
		          <div class="info-box box_curve_st" style="box-shadow: 0 3px 8px grey">
		            <span class="info-box-icon bg-teal box_curve_st"><i class="fa fa-group"></i></span>
		
		            <div class="info-box-content">
		              <span class="info-box-number box_title">Meeting <br/><span style="font-size:25px;" t-esc="widget.login_member['total_meet']" /></span>
		              <span class="text cr_meeting cr_navigate" style="position:absolute;bottom:15px;right:20px;font-size:14px;">View &#160;<i class="fa fa-external-link-square"></i></span>
		            </div>
		          </div>
		       </div>
		    </t>
        </t>
    </t>

</templates>