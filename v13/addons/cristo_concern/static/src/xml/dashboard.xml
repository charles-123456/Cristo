<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

	<t t-extend="LoginMemberDetails">
        <t t-jquery=".sm_box_cont" t-operation="append">
        	<t t-if="widget.login_member['concern']">
        		<div class="col-md-4 col-sm-6 col-xs-12">
		          <div class="info-box box_curve_st" style="box-shadow: 0 3px 8px grey">
		            <span class="info-box-icon bg-green box_curve_st"><i class="fa fa-ticket"></i></span>
		            
		            <div class="info-box-content">
		              <span class="info-box-number box_title">Concern <br/><span style="font-size:25px;" t-esc="widget.login_member['total_concern']" /></span>
		              <span class="text cr_concern cr_navigate" style="position:absolute;bottom:15px;right:20px;font-size:14px;">View &#160;<i class="fa fa-external-link-square"></i></span>
		            </div>
		          </div>
		        </div>
		    </t>
        </t>
    </t>

</templates>